<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeCreaPreg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CreaPreg"
    tools:showIn="@layout/activity_crea_preg">

    <EditText
        android:id="@+id/preg1"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="85dp"
        android:ems="10"
        android:hint="@string/introduzca_una_pregunta"
        android:inputType="textPersonName"
        android:autofillHints="" />

    <EditText
        android:id="@+id/rsp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/preg1"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="213dp"
        android:ems="10"
        android:hint="@string/introduzca_una_respuesta"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/rsp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/preg1"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="265dp"
        android:ems="10"
        android:hint="@string/introduzca_una_respuesta"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/rsp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/preg1"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="319dp"
        android:ems="10"
        android:hint="@string/introduzca_una_respuesta"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/rsp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/preg1"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="102dp"
        android:ems="10"
        android:hint="@string/introduzca_una_respuesta"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnguardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="147dp"
        android:layout_marginBottom="454dp"
        android:text="@string/guardar" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="326dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_alignTop="@+id/rsp1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="71dp">

        <RadioButton
            android:id="@+id/rbrsp1"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1" />
    </RadioGroup>

    <Button
        android:id="@+id/anadirCat"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_add_black_24dp" />

</RelativeLayout>